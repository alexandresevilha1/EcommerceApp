@using EcommerceApp.Application.DTOs
@model ProductDTO

@{
    ViewData["Title"] = "Cadastrar Produto";
}

<div class="container mt-5">
    <h2>Cadastro de Produto</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form method="post" asp-action="Create" asp-controller="Product">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control shadow-none" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control shadow-none"></textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input type="number" asp-for="Price" class="form-control shadow-none" />
                    <span class="text-danger" asp-validation-for="Price"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Stock" class="form-label"></label>
                    <input type="number" asp-for="Stock" class="form-control shadow-none" />
                    <span class="text-danger" asp-validation-for="Stock"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageURL" class="form-label">URL da Imagem</label>
                    <input asp-for="ImageURL" class="form-control shadow-none" />
                    <span class="text-danger" asp-validation-for="ImageURL"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <select asp-for="CategoryId" class="form-select shadow-none"
                            asp-items="ViewBag.Categories">
                        <option value="">-- Selecione uma Categoria --</option>
                    </select>
                    <span class="text-danger" asp-validation-for="CategoryId"></span>
                </div>

                <div class="btn-box d-flex mt-3">
                    <button type="submit" class="btn btn-success w-50 mx-1">
                        <i class="bi bi-plus-circle"></i> Cadastrar
                    </button>
                    <a class="btn btn-info w-50" asp-controller="Product" asp-action="Index">
                        <i class="bi bi-arrow-left-circle"></i> Voltar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>