@model IEnumerable<EcommerceApp.Application.DTOs.ProductDTO>

@{
    ViewData["Title"] = "Página Inicial";
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Nossos Produtos</h1>
        <p class="lead text-muted">Confira as últimas novidades da nossa loja.</p>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">

            @foreach (var product in Model)
            {
                <div class="col">
                    <div class="card shadow-sm h-100">
                        <img src="@(string.IsNullOrEmpty(product.ImageURL) ? "https://via.placeholder.com/300x200?text=Sem+Imagem" : product.ImageURL)"
                             class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.Name</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@product.CategoryName</h6>
                            <p class="card-text small">
                                @product.Description
                            </p>

                            <div class="mt-auto">
                                <p class="card-text fs-5 fw-bold text-success">
                                    @product.Price.ToString("C")
                                </p>

                                <form asp-controller="Cart" asp-action="AddToCart" method="post">

                                    <input type="hidden" name="productId" value="@product.Id" />
                                    <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />

                                    <button type="submit" class="btn btn-primary w-100">
                                        <i class="bi bi-cart-plus"></i> Adicionar ao Carrinho
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center">
            <p class="lead">Nenhum produto encontrado no momento.</p>
        </div>
    }
</div>