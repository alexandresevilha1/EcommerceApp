@model IEnumerable<EcommerceApp.Application.DTOs.CategoryDTO>

@{
    ViewData["Title"] = "Lista de Categorias";
}

<div class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <a class="btn btn-success" asp-action="Create" asp-controller="Category">Cadastrar nova Categoria</a>
        </div>

        <div class="row">

            <table id="Emprestimos" class="table table-light table-hover mt-5">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">NOME</th>
                        <th scope="col">DESCRIÇÃO</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var category in Model)
                        {
                            <tr>
                                <th scope="row">@category.Id</th>
                                <td>@category.Name</td>
                                <td>@category.Description</td>
                                <td>
                                    <a asp-controller="Category" asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning mx-2">
                                        <i class="bi bi-pencil-square mx-2"></i>Editar
                                    </a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash3-fill mx-2"></i>Excluir
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center">Nenhuma categoria cadastrada.</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>