@using EcommerceApp.Application.DTOs
@model CategoryDTO

@{
    ViewData["Title"] = "Excluir Categoria";
}

<div class="container mt-5">
    <h3>Você tem certeza que deseja excluir esta categoria?</h3>
    <h4 class="text-danger">Esta ação não pode ser desfeita.</h4>
    <hr />

    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Nome
            </dt>
            <dd class="col-sm-10">
                @Model.Name
            </dd>
            <dt class="col-sm-2">
                Descrição
            </dt>
            <dd class="col-sm-10">
                @Model.Description
            </dd>
        </dl>
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post">

            <div class="btn-box d-flex mt-3">
                <button type="submit" class="btn btn-danger w-50 mx-1">
                    <i class="bi bi-trash3-fill"></i> Confirmar Exclusão
                </button>

                <a class="btn btn-info w-50" asp-controller="Category" asp-action="Index">
                    <i class="bi bi-arrow-left-circle"></i> Voltar
                </a>
            </div>
        </form>
    </div>
</div>