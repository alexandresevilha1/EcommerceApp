@{
    ViewData["Title"] = "Pedido Confirmado";
    var orderId = ViewBag.OrderId;
}

<div class="container py-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>

            <h1 class="display-4 mt-3">Obrigado!</h1>
            <p class="lead">Seu pedido foi recebido com sucesso.</p>

            @if (orderId != null)
            {
                <p class="fs-5">O número do seu pedido é: <strong>#@orderId</strong></p>
            }

            <hr class="my-4" />

            <p>
                Enviaremos uma confirmação por email em breve (funcionalidade futura).
            </p>
            <p class="lead">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">Voltar à Loja</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}