@model EcommerceApp.Application.DTOs.CartDTO

@{
    ViewData["Title"] = "Finalizar Pedido";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="mb-4">@ViewData["Title"]</h2>
            <p class="lead">Por favor, confirme os itens do seu pedido antes de finalizar.</p>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="row mt-4">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5>Itens do Pedido</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        @foreach (var item in Model.Itens)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="my-0">@item.ProductName</h6>
                                    <small class="text-muted">Quantidade: @item.Quantity</small>
                                </div>
                                <span class="text-muted">@item.Subtotal.ToString("C")</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5>Total</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between">
                            <strong>Total (BRL)</strong>
                            <span class="fw-bold fs-5 text-success">@Model.TotalCarrinho.ToString("C")</span>
                        </li>
                    </ul>

                    <form asp-controller="Checkout" asp-action="PlaceOrder" method="post" class="mt-3">
                        @Html.AntiForgeryToken()
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-bag-check-fill"></i> Finalizar Compra
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-2">
                        <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary btn-sm">Voltar ao Carrinho</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>